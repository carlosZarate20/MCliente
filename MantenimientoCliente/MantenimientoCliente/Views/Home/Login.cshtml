@model MantenimientoCliente.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
    ViewBag.Icon = "fa fa-sign-in";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Login Form</title>




    <link rel="stylesheet" href=@Url.Content("~/Content/css/style.css")>


></head>
<body>
    <div class="login">
        <div class="login-triangle"></div>

        <h2 class="login-header">Log in</h2>
        <form class="login-container" method="post">


                <div class="form-group">
                    <label>Codigo</label>
 
                    @Html.TextBoxFor(X => X.Codigo, new { @class = "form-control input-lg" })

                </div>
                <div class="form-group">
                    <label>Password</label>
                    @Html.PasswordFor(X => X.Contraseña)

                </div>

                 <input type="submit" value="Ingresar">


                @if (TempData["Mensaje"] != null)
                {
                    <div>
                        <div class="validation-summary-errors">@TempData["Mensaje"]</div>
                    </div>
                }

        </form>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>




</body>
</html>

